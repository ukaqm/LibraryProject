@{
}

@model Book

<div class="card m-1 p-1">

    <h3>
        @Model.Title
        <span class="float-end"><small>$@Model.Price</small></span>
    </h3>

    <h6>@Model.Classification</h6>
    <p>Written by @Model.Author</p>
    <ul>
        <li>Published by @Model.Publisher</li>
        <li>Pages @Model.PageCount</li>
        <li>ISBN: @Model.Isbn</li>
    </ul>

</div>